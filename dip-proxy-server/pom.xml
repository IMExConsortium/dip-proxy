<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.ucla.mbi.dip</groupId>
  <artifactId>dip-proxy-server</artifactId>
  <packaging>war</packaging>
  <name>dip-proxy-server</name>
  <url>http://dip.mbi.ucla.edu</url>

  <properties>
    <tomcat.datasource></tomcat.datasource>
  </properties>

  <profiles>

    <profile>
      <id>server-tomcat</id>
      <activation>
        <property>
          <name>server</name>
          <value>tomcat</value>
        </property>
      </activation>
      <properties>
        <!--- using JNDI for tomcat server-->
        <tomcat.datasource>java:/comp/env/</tomcat.datasource> 
      </properties>
    </profile>

    <profile>
      <id>dip-proxy-dev</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>build</name>
          <value>dev</value>
        </property>
      </activation>
      <properties>
        <environment.srv>tomcat</environment.srv>
        <dip-proxy.css>icentral-test.css</dip-proxy.css>

        <!--- using JNDI -->
        <hibernate.connection.datasource>${tomcat.datasource}jdbc/proxyws</hibernate.connection.datasource>
        <!-- for jetty server -->
        <hibernate.connection.dbname>proxyws201</hibernate.connection.dbname>
        <hibernate.connection.servername>10.1.1.114</hibernate.connection.servername>
        <hibernate.connection.portnum>5432</hibernate.connection.portnum>
        <!-- for tomcat server -->
        <!--
        <hibernate.connection.url>
            jdbc:postgresql://${hibernate.connection.servername}:${hibernate.connection.portnum}/${hibernate.connection.dbname}
        </hibernate.connection.url>
        -->
      </properties>
      <build>
        <finalName>dip-proxy</finalName>
      </build>
   </profile>

   <profile>
     <id>dip-proxy-beta</id>
     <activation>
       <property>
         <name>build</name>
         <value>beta</value>
       </property>
     </activation>
     <properties>
        <dip-proxy.css>dip-proxy-beta.css</dip-proxy.css> 
        <hibernate.connection.datasource>${tomcat.datasource}jdbc/proxyws</hibernate.connection.datasource>
        <hibernate.connection.dbname>proxyws</hibernate.connection.dbname>
        <hibernate.connection.servername>10.1.1.211</hibernate.connection.servername>
        <hibernate.connection.portnum>5432</hibernate.connection.portnum>
        <!--
        <hibernate.connection.url>
            jdbc:postgresql://${hibernate.connection.servername}:${hibernate.connection.portnum}/${hibernate.connection.dbname}
        </hibernate.connection.url>
        -->
     </properties>
     <build>
       <finalName>dip-proxy</finalName>
     </build>
   </profile>

   <profile>
     <id>dip-proxy-production</id>
     <activation>
        <property>
          <name>build</name>
          <value>prod</value>
        </property> 
     </activation>
     <properties>
        <dip-proxy.css>dip-proxy.css</dip-proxy.css>
      
        <hibernate.connection.datasource>${tomcat.datasource}jdbc/proxyws</hibernate.connection.datasource>
        <hibernate.connection.dbname>proxyws</hibernate.connection.dbname>
        <hibernate.connection.servername>10.1.1.211</hibernate.connection.servername>
        <hibernate.connection.portnum>5432</hibernate.connection.portnum>
        <!--
        <hibernate.connection.url>
            jdbc:postgresql://${hibernate.connection.servername}:${hibernate.connection.portnum}/${hibernate.connection.dbname}
        </hibernate.connection.url>
        -->
     </properties>
     <build>
       <finalName>dip-proxy</finalName>
     </build>
   </profile>

  </profiles>

  <parent>
    <groupId>edu.ucla.mbi.dip</groupId>
    <artifactId>dip-proxy</artifactId>
    <version>0.02</version>
  </parent>

  <dependencies>

    <dependency>
      <groupId>edu.ucla.mbi.dip</groupId>
      <artifactId>picr-client</artifactId>
      <version>0.02</version>
    </dependency>

    <dependency>
      <groupId>edu.ucla.mbi.dip</groupId>
      <artifactId>dip-proxy-api</artifactId>
      <version>0.02</version>
    </dependency>

    <dependency>
      <groupId>edu.ucla.mbi.dip</groupId>
      <artifactId>dip-util-struts</artifactId>
      <version>0.02</version>
    </dependency>

   
    <dependency>
      <groupId>edu.ucla.mbi.dip</groupId>
      <artifactId>ovr-weaver</artifactId>
      <version>0.10.3</version>
    </dependency>
   
    <dependency>
      <groupId>edu.ucla.mbi.dip</groupId>
      <artifactId>dip-util-orm</artifactId>
      <version>0.02</version>
    </dependency>
   
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-aop</artifactId>
      <version>2.5.6</version>
    </dependency>
    
    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjrt</artifactId>
      <version>1.6.1</version>
    </dependency>

    <dependency>
      <groupId>org.aspectj</groupId>
      <artifactId>aspectjweaver</artifactId>
      <version>1.6.1</version>
    </dependency>

  </dependencies>
    
  <build>
    <finalName>dip-proxy-server</finalName>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <archiveClasses>true</archiveClasses> 
          <webResources>

            <resource>
              <directory>${basedir}/../dip-proxy-api/src/wsdl</directory>
              <targetPath>WEB-INF/wsdl</targetPath>
              <includes>   
                <include>DhtService14.wsdl</include>
                <include>ProxyService14.wsdl</include> 
                <include>NcbiService14.wsdl</include>
                <include>EbiService14.wsdl</include>
                <include>ProlinksService14.wsdl</include>
                <include>DipService14.wsdl</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/xsl</directory>
              <targetPath>xsl</targetPath>
              <includes>
                <include>*/*.xsl</include>
                <include>*.xsl</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/main/webapp/WEB-INF</directory>
              <targetPath>WEB-INF</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>jetty-env.xml</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/main/webapp/META-INF</directory>
              <targetPath>META-INF</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>context.xml</include>
              </includes>
            </resource>
             
            <resource>
              <directory>${basedir}/src/main/webapp/tiles</directory>
              <targetPath>tiles</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>icentral-css.jsp</include>
              </includes>
            </resource>
            
          </webResources>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.25</version>
        <configuration>
          <!-- configure the container -->
          <connectors>
            <connector 
                implementation="org.mortbay.jetty.nio.SelectChannelConnector">

              <port>8080</port>
              <!-- maxIdleTime unit is millisecond -->
              <maxIdleTime>3600000</maxIdleTime>
            </connector>
          </connectors>

          <!--<webDefaultXml>${basedir}/src/main/resources/webdefault.xml</webDefaultXml> -->
          <webDefaultXml>${basedir}/src/main/config/jetty/webdefault.xml</webDefaultXml>

          <systemProperties>
            <systemProperty>
              <name>com.sun.xml.ws.fault.SOAPFaultBuilder.disableCaptureStackTrace</name>
              <value>false</value>
            </systemProperty>

            <systemProperty>
              <name>log4j.configuration</name>
              <!--<value>file:${basedir}/src/main/resources/jetty-log4j.properties</value>  -->
              <value>file:${basedir}/src/main/config/jetty/jetty-log4j.properties</value>
            </systemProperty>

          </systemProperties>
        </configuration>

      </plugin>
    </plugins>

  </build>

</project>






