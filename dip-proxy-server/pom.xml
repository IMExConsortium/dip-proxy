<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.ucla.mbi.dip</groupId>
  <artifactId>dip-proxy-server</artifactId>
  <packaging>war</packaging>
  <version>0.01</version>
  <name>dip-proxy-server</name>
  <url>http://dip.mbi.ucla.edu</url>

  <properties>
    <dip-proxy.version>${project.version}</dip-proxy.version>
    <dip-proxy.bld>$Rev: 182 $</dip-proxy.bld>
    <dip-proxy.wsver>1.0</dip-proxy.wsver>

      <dip-proxy.jdbc>jdbc/proxyws</dip-proxy.jdbc>
      <!--<dip-proxy.jdbc>java:comp/env/jdbc/proxyws</dip-proxy.jdbc> -->

      <!--<dip-proxy.css>dip-proxy-test.css</dip-proxy.css> -->
     <icentral.css>icentral-test.css</icentral.css>
  </properties>

  <profiles>

   <profile>
     <id>test</id>
     <activation>
       <property>
        <name>build</name>
        <value>test</value>
      </property>
     </activation>
     <properties>
       <environment.srv>tomcat</environment.srv>
       <dip-proxy.jdbc>java:/comp/env/jdbc/proxyws</dip-proxy.jdbc>
       <dip-proxy.css>dip-proxy-test.css</dip-proxy.css>
     </properties>
     <build>
      <finalName>dip-proxy</finalName>
     </build>
   </profile>

   <profile>
     <id>beta</id>
     <activation>
       <property>
        <name>build</name>
        <value>beta</value>
      </property>
     </activation>
     <properties>
      <environment.srv>tomcat</environment.srv>
      <dip-proxy.jdbc>java:/comp/env/jdbc/proxyws</dip-proxy.jdbc>
      <dip-proxy.css>dip-proxy-beta.css</dip-proxy.css>
     </properties>
     <build>
      <finalName>dip-proxy</finalName>
     </build>
   </profile>

   <profile>
     <id>production</id>
     <activation>
       <property>
         <name>build</name>
         <value>prod</value>
       </property> 
     </activation>
     <properties>
      <environment.srv>tomcat</environment.srv>
      <dip-proxy.jdbc>java:/comp/env/jdbc/proxyws</dip-proxy.jdbc>
      <dip-proxy.css>dip-proxy.css</dip-proxy.css>
     </properties>
     <build>
      <finalName>dip-proxy</finalName>
     </build>
   </profile>

  </profiles>

  <parent>
   <groupId>edu.ucla.mbi.dip</groupId>
   <artifactId>dip-proxy</artifactId>
   <version>0.01</version>
  </parent>

  <dependencies>

   <dependency>
     <groupId>edu.ucla.mbi.dip</groupId>
     <artifactId>picr-client</artifactId>
     <version>0.01</version>
   </dependency>

   <dependency>
     <groupId>edu.ucla.mbi.dip</groupId>
     <artifactId>dip-proxy-api</artifactId>
     <version>0.01</version>
   </dependency>

    <dependency>
     <groupId>edu.ucla.mbi.dip</groupId>
     <artifactId>dip-util-struts</artifactId>
     <version>0.01</version>
   </dependency>

   
   <dependency>
     <groupId>edu.ucla.mbi.dip</groupId>
     <artifactId>ovr-weaver</artifactId>
     <version>0.9.4</version>
   </dependency>
   
   <dependency>
     <groupId>edu.ucla.mbi.dip</groupId>
     <artifactId>dip-util-orm</artifactId>
     <version>0.01</version>
   </dependency>

   <dependency>
    <groupId>xalan</groupId>
    <artifactId>xalan</artifactId>
    <version>2.7.1</version>
   </dependency>

   <dependency>
    <groupId>javax.servlet</groupId>
    <artifactId>servlet-api</artifactId>
    <version>2.5</version>
    <scope>provided</scope>
   </dependency>

   <dependency>
    <groupId>javax.activation</groupId>
    <artifactId>activation</artifactId>
    <version>1.1</version>
    <scope>provided</scope>
   </dependency>
  
  </dependencies>

  <build>
   <finalName>dip-proxy-server</finalName>

   <plugins>
    <plugin>
     <groupId>org.apache.maven.plugins</groupId>
     <artifactId>maven-compiler-plugin</artifactId>
     <configuration>
      <verbose>true</verbose>
      <fork>true</fork>
      <source>1.6</source>
      <target>1.6</target>
     </configuration>
    </plugin>
   
    <plugin>
     <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <archiveClasses>true</archiveClasses>
          <webResources>

            <resource>
              <directory>${basedir}/../dip-proxy-api/src/wsdl</directory>
              <targetPath>WEB-INF/wsdl</targetPath>
              <filtering>true</filtering>
              <includes>   
                <include>services.xsd</include>
                <include>DhtService14.wsdl</include>
                <include>DipService14.wsdl</include> 
                <include>EbiService14.wsdl</include>
                <include>NcbiService14.wsdl</include>
                <include>ProlinksService14.wsdl</include>
                <include>DipLegacyService.wsdl</include>
                <!--<include>DipDirect14.wsdl</include> -->
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/xsl</directory>
              <targetPath>xsl</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>*.xsl</include>
                <include>*/*.xsl</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/../etc/dip-proxy</directory>
              <targetPath>META-INF</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>context.xml</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/main/resources</directory>
              <targetPath>WEB-INF/classes</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>hibernate.cfg.xml</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/../etc/dip-proxy</directory>
              <targetPath>WEB-INF</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>jetty-env.xml</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/../etc/dip-proxy</directory>
              <targetPath>WEB-INF/classes</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>log4j.properties</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/main/webapp/etc</directory>
              <targetPath>etc</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>*.json</include>
              </includes>
            </resource>

            <resource>
              <directory>${basedir}/src/main/webapp/tiles</directory>
              <targetPath>tiles</targetPath>
              <filtering>true</filtering>
              <includes>
                <include>*.jsp</include>
              </includes>
            </resource>

          </webResources>
        </configuration>
    </plugin>
    
    <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>client</classifier>
              <includes>
                <include>**/proxy/*/*</include>
                <include>**/util/*</include>
              </includes>
            </configuration>
          </execution>
        </executions>
    </plugin>

    <plugin>
     <groupId>org.mortbay.jetty</groupId>
     <artifactId>maven-jetty-plugin</artifactId>
     <version>6.1.18</version>

     <configuration>

      <webDefaultXml>src/main/resources/webdefault.xml</webDefaultXml>

      <systemProperties>
       <systemProperty>
        <name>com.sun.xml.ws.fault.SOAPFaultBuilder.disableCaptureStackTrace</name>
        <value>false</value>
       </systemProperty>

       <systemProperty>
          <name>log4j.configuration</name>
          <value>file:../etc/dip-proxy/jetty-log4j.properties</value>
       </systemProperty>

      </systemProperties>
     </configuration>

    </plugin>
   </plugins>
  </build>

</project>






