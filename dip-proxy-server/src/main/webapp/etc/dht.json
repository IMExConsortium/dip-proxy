{
  "legend":"Dht Router Configuration", 
  "options":["node-config","boot-servers"], 
  "option-def":{
      "node-config": {
         "legend":"Overlay Node Configuration",     
         "options":[ "overlay-network-flag","max-drl-size","default-ttl"],
         "option-def":{
             "overlay-network-flag": {
              "label": "Networked overlay",
              "type": "boolean",
              "value": "${dht.overlay.network.flag}",   
              "opp":"overlay_network_flag", 
              "opcode": "xxx"
             },
             "max-drl-size": {
              "label": "Overlay record size",
              "type": "string",
              "length":"3",
              "value": "5",              
              "opp":"max_drl_size", 
              "opcode": "xxx"
             },
             "default-ttl":{
              "label":"Overlay record TTL ( Hour )",
              "type":"string",
              "length":"5",
              "value":"3",
              "opp":"default_ttl",
              "opcode":"xxx"
             },
             "networked-application-id": {
              "label": "networked-application-id",
              "type": "string",
              "value": "1",
              "opp":"networked_application_id",
              "opcode": "xxx"
             },
             "local-application-id": {
              "label": "local-application-id",
              "type": "string",
              "value": "2",
              "opp":"local_application_id",
              "opcode": "xxx"
             },
             "routing-algorithm":{
              "label":"routing-algorithm",
              "type":"string",
              "value":"${dht.routing}",
              "opp":"routing_algorithm",
              "opcode":"xxx"
             },
             "directory-type":{
              "label":"directory-type",
              "type":"string",
              "value":"BerkeleyDB",
              "opp":"directory_type",
              "opcode":"xxx"
             },
             "working-directory":{
              "label":"working-directory",
              "type":"string",
              "value":"dht",
              "opp":"working_directory",
              "opcode":"xxx"
             },
             "dht-port":{
              "label":"dht-port",
              "type":"string",
              "value":"55666",
              "opp":"dht_port",
              "opcode":"xxx"
             }
         }
      },
      "boot-servers": {
         "legend":"Boot Servers",
         "label": "Boot Server List",
         "type":"string", 
         "length":"70",
         "value": "10.1.200.201, 10.1.200.208, 10.1.200.209, 10.1.200.210",
         "opp": "boot_servers",
         "opcode": "xxx"      
      }
  },
  "opcode": "update"
}
